<body bg-light>

  <main>
    <%- include('partials/_header') %>

    <div class="container-fluid bg-light pt-3">
    <% for (let listing of listings) { %>
    <% const date = new Date(listing.date_posted); %>
    <% const datePosted = date.toISOString().substring(0, 10); %>



