<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Listings</title>
  <link rel="shortcut icon" type="image/png" href="dd_logo.png"/>
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/styles/listings.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <link rel="stylesheet" href="/styles/header.css" type="text/css" />

  <script src="https://cdnjs.cloudflare.com/ajax/libs/timeago.js/4.0.2/timeago.min.js" integrity="sha512-SVDh1zH5N9ChofSlNAK43lcNS7lWze6DTVx1JCXH1Tmno+0/1jMpdbR8YDgDUfcUrPp1xyE53G42GFrcM0CMVg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <script src="vendor/jquery-2.2.3.min.js" type="text/javascript"></script>

  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>


</head>

<body bg-light>

  <main>
    <%- include('partials/_header') %>

    <!-- <div class="container-fluid bg-light pt-3 ml-5"> -->
    <div class="container-fluid-bg-light-pt-3-ml-5">
    <% for (let listing of listings) { %>
    <% const date = new Date(listing.date_posted); %>
    <% const datePosted = date.toISOString().substring(0, 10); %>

    <div class="container-fluid bg-light mt-5"></div>
      <div class="card mb-3" style="max-width: 75%; margin-left: 60px;">
          <div class="row g-0">
            <div class="col-4">
              <figure class="figure ms-4 mt-3 justify-content-center align-items-center">
                <img src="<%= listing.picture %>" class="img-thumbnail  img-rounded dino-img " alt="...">
                <figcaption class="figure-caption text-end"><%= listing.name %></figcaption>
              </figure>
            </div>
            <div class="col-8">
              <div class="card-body ms-3">
                <div class="row">
                  <!-- <div class="col-2"> </div> -->
                  <div class="col-10">
                    <div class="btn-group btn-sm justify-content-end">
                      <a href="/mylistings/update/<%= listing.id %>" class="btn btn btn-outline-success active btn-sm  ms-5" aria-current="page"> <i class="bi bi-currency-dollar"></i> Mark as Sold</a>
                      <a href="/listings/<%=listing.id%>" method="GET" class="btn btn-outline-success btn-sm"><i class="bi bi-eye-fill"></i> View</a>
                      <a href="/mylistings/delete/<%= listing.id %>" class="btn btn-outline-success btn-sm"><i class="bi bi-trash-fill"></i> Remove</a>
                    </div>
                  </div>
                  <span class="border-start mt-4 "><p class="card-text small"><%= listing.description %></p></span>
                  <p class="card-text mt-4"><small class="text-muted">Date posted: <%=datePosted%></small></p>
                  <div class="row">
                    <div class="col-3">
                      <div class='visits'><i class="bi bi-search">&nbsp&nbsp<%= listing.visits %> visits</i></div>
                    </div>
                    <div class="col-3">
                      <% if(listing.sold) { %>
                      <span class="ms-2 text-danger fw-bolder text-italic">Sold</span>
                      <% } %>
                    </div>
                    <div class="col-6"></div>
                  </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <div>

    <% } %>
    </div>
  </main>


  <footer>
  </footer>

  <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.min.js"></script>



</body>

</html>
