<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Search page</title>

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/styles/header.css" type="text/css" />

  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>


</head>

<body bg-light>

  <main>
    <%- include('partials/_header') %>

    <div class="d-grid gap-2">
      <button class="mx-3 py-0 mb-3 btn btn-lg" data-bs-toggle="collapse" aria-expanded="false" data-bs-target="#filter-bar" aria-controls="filter-bar">Filter by</button>
    </div>
    <aside id="filter-bar" class="collapse bd-aside sticky-xl-top text-muted align-self-start px-4 mb-2">
      <form action="/api/listings/search" method="GET" class="row g-3">
        <div class="col-4">
          <label for="name" class="form-label">Name</label>
          <input type="text" name="name" class="form-control">
        </div>
        <div class="col-4">
          <label for="type" class="form-label">Type</label>
          <input type="text" name="type" class="form-control">
        </div>
        <div class="col-4">
          <label for="time_period" class="form-label">Time Period</label>
          <input type="text" name="time_period" class="form-control">
        </div>
        <div class="form-check form-switch col-2">
          <label class="form-check-label" for="most_views">Sort by Most Views</label>
          <input class="form-check-input" name="most_views" type="checkbox">
          <label class="form-check-label" for="most_recent">Sort by Most Recent</label>
          <input class="form-check-input" name="most_recent" type="checkbox">
        </div>
        <div class="col-2">
        </div>
        <div class="col-2">
          <label for="min_price" class="form-label">Minimum Price</label>
          <input type="number" name="min_price" class="form-control">
        </div>
        <div class="col-2">
          <label for="max_price" class="form-label">Maximum Price</label>
          <input type="number" name="max_price" class="form-control">
        </div>
        <div class="col-12">
          <button type="submit" class="btn btn-primary">Search</button>
        </div>
      </form>
    </aside>

    <div class="container-fluid bg-light pt-3">
    <% for (let listing of listings) { %>

    <div class="container bg-light mt-5 align-items-center justify-content-center ">

        <div class="card mb-3  " style="max-width: 75%;">
          <div class="row g-0">
            <div class="col-4">
              <figure class="figure ms-4 mt-3 justify-content-center align-items-center">
                <img src="<%= listing.picture %>" class=" img-fluid  rounded-start dino-img " alt="...">
                <figcaption class="figure-caption text-end"><%= listing.name %></figcaption>
              </figure>
            </div>
            <div class="col-8">
              <div class="card-body ms-3">
                <div class="row">
                  <div class="col-3"> <img src="<%= listing.user_pic %>" class="img-circle logo" alt="..."></div>
                  <div class="col-3"> </div>
                  <div class="col-3 "> <img src="images/message1.png" class="logo"></div>
                  <div class="col-3 mb-4"><a href='/favorites/delete/<%= listing.favlisting_id %>'><img src="images/favorite.png" class="logo"></a> </div>
                </div>
                <p class="card-text"><small class="text-muted"><%= listing.visits %> visits</small></p>
                <!-- <span><i class="bi bi-star-fill checked"></i></span>
                <span><i class="bi bi-star-fill checked"></i></span>
                <span><i class="bi bi-star-fill checked"></i></span>
                <span><i class="bi bi-star-fill checked"></i></span>
                <span><i class="bi bi-star-fill checked"></i></span> -->
                <p class="card-text mt-3"><%= listing.description %></p>
                <p class="card-text mt-5"><small class="text-muted">Last updated <%=listing.date_posted%></small></p>
              </div>
            </div>
          </div>
        </div>
      </div>

    <% } %>
  </div>
  </main>


  <footer>
  </footer>

  <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.min.js"></script>

</body>

</html>
