        <div class="card mb-3  " style="max-width: 75%;">
          <div class="row g-0">
            <div class="col-4">
              <figure class="figure ms-4 mt-3 justify-content-center align-items-center">
                <img src="<%= listing.picture %>" class="img-thumbnail  img-rounded dino-img " alt="...">
                <figcaption class="figure-caption text-end"><%= listing.name %></figcaption>
              </figure>
            </div>
            <div class="col-8">
              <div class="btn-group view-unfavorite">
                <a href="/listings/<%=listing.id%>" method="GET" class="btn btn-outline-success btn-sm"><i class="bi bi-eye-fill"></i> View</a>
                <a href="/favorites/delete/<%= listing.favlisting_id %>" class="btn btn-outline-success btn-sm"><i class="bi bi-trash-fill"></i> Unfavorite</a>
              </div>
              <div class="favorite-description">
                <p class="card-text mt-3 small"><%= listing.description %></p>
              </div>
              <div class="favorite-date">
                <small class="text-muted">Date posted: <%= datePosted %></small>
              </div>
              <div class="favorite-visits">
                <div class='visits'><i class="bi bi-eye-fill">&nbsp&nbsp<%= listing.visits %> visits</i> </div>
